<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#03174C">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:text="Night Island"
        android:id="@+id/textViewTitle"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="300dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/grey"
        android:text="@string/sleep_music"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="350dp"/>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/exoPlayerViewContentFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:resize_mode="fill"
        app:played_color="#E6E7F2"
        app:unplayed_color="#47557E"
        app:buffered_color="#47557E"
        app:scrubber_color="#8E97FD"
        app:show_timeout="1500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:controller_layout_id="@layout/exo_config"/>


    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/player_vector_one"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:src="@drawable/vector_two"
        android:scaleType="fitXY"
        android:id="@+id/imageViewLikeBottle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:src="@drawable/vector_three"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:src="@drawable/vector_four"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="290dp"
        android:layout_height="400dp"
        android:src="@drawable/vector_five"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/imageViewLikeBottle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="210dp"
        android:layout_height="340dp"
        android:layout_marginTop="190dp"
        android:id="@+id/imageViewTest"
        android:src="@drawable/vector_six"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/image_cross"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/image_download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="35dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/image_love"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="35dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>